<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="70"
        android:id="@+id/food_places_img"
        android:scaleType="centerCrop"
        android:src="@drawable/img_eat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/food_places_img_description"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="This restaurant is located at Jln Santubong."
        android:textSize="20sp"
        android:textColor="#000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="The description of the restaurant goes here...\nTHe History of the restaurant started from 2000...\nThe foods of this restaurant choose a variety of..."
        android:textSize="16sp"
        android:textColor="#000" />

</LinearLayout>